{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }} custom-section">
<div class="page-width color-{{ section.settings.color_scheme }}">
  <div class="container__collection">
    <div class="btn-group">
      <div class="swiper-btn button--{{ section.id }} swiper-button-prev"></div>
      <div class="swiper-btn button--{{ section.id }} swiper-button-next"></div>
    </div>
    <div class="collection__heading-container">
      <h2 class="container__collection-heading">{{ section.settings.heading }}</h2>
    {% comment %} <div class="btn-group">
                                                  <button class="slider__btn slider__btn--left">{% render 'icon-minus' %}</button>
                                                  <button class="slider__btn slider__btn--right">{% render 'icon-plus' %}</button>
                                  </div> {% endcomment %}
    </div>
    <div class="collection__list swiper mySwiper mySwiper-{{ section.id }} swiper-desktop">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          <a href="{{ block.settings.collection.url }}" class="container__collection-card swiper-slide custom-card">
            <div class="container__brand-product-image">
              <img src="{{ block.settings.product_image |  image_url: width: section.setting.product_image.widht  }}" class="brand-image">
            </div>
            <div class="container__product-title">
              <h2>{{ block.settings.collection.title }}</h2>
            </div>
            <div>
              <button class="collection-btn" href="{{ block.settings.collection.url }}">{{ block.settings.button_text }}</button>
            </div>
          </a>
        {% endfor %}
      </div>
      <div class="swiper-pagination swiper-pagination-{{ section.id }}"></div>
    </div>

    <div class="collection__list swiper mySwiper-{{ section.id }} swiper-mobile">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% assign index4 = forloop.index0 | modulo: 4 %}

          {% if index4 == 0 %}
            <div class="swiper-slide">
              <div class="collection__brand-wrapper">
          {% endif %}

          <a href="{{ block.settings.collection.url }}" class="container__collection-card swiper-slide custom-card">
            <div class="container__brand-product-image">
              <img src="{{ block.settings.product_image |  image_url: width: section.setting.product_image.widht  }}" class="brand-image">
            </div>
            <div class="container__product-title">
              <h2>{{ block.settings.collection.title }}</h2>
            </div>
            <div>
              <button class="collection-btn" href="{{ block.settings.collection.url }}">{{ block.settings.button_text }}</button>
            </div>
          </a>

          {% if index4 == 3 or forloop.last %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="swiper-pagination swiper-pagination-{{ section.id }}"></div>
    </div>
  </div>
</div>
</div>

<style>

  .container__collection {
    padding: 2rem;
    position: relative;
  }

  .collection__heading-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }

  .collection__brand-wrapper {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 170px));
    align-items: center;
    justify-content: center;
    gap: 5px;
  }

  .swiper-mobile {
    display: none !important;
  }

  @media (max-width: 768px) {
    .container__collection {
    padding: 0;
  }
    .swiper-desktop {
      display: none !important;
    }
    .swiper-mobile {
      display: block !important;
    }
  }

  .container__collection-heading {
    font-size: 37px;
    font-weight: 600;
  }

  .container__collection-heading p {
    margin: 0;
  }

  .collection__list {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
    position: relative;
  }

  .container__collection-card {
    width: 400px;
    height: 550px;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: white;
    gap: 0.375rem;
    cursor: pointer;
    text-decoration: none;
  }

  .container__product-image {
    display: flex;
    justify-content: center;
    align-items: center;

    object-fit: contain;

  }

  .brand-image {
    height: 380px;
  }

  .container__product-title h2 {
    font-size: 36px;
    font-weight: 600;
    text-align: center;
    margin-block: 0.5rem;
    text-decoration: none;
  }

  .collection-btn {
    background: white;
    font-size: 16px;
    padding: 1rem 4rem;
    border: 1px solid #074542;
    color: #074542;
    border-radius: 29px;
    text-decoration: none;
    font-weight: 600;
    margin: 10px;
    cursor: pointer;
  }

  .collection-btn:hover {
    background-color: #074542;
    border: 1px solid White;
    color: white;
  }

  .slider__btn svg {
    width: 20px;
    height: 20px;
  }

  .btn-group {
    display: flex;
    position: absolute;
    gap: 20px;
    right: 20px;
    top: 80px;
  }

  .swiper-btn {
    display: flex !important;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: #008780;
    color: white;
    justify-content: center;
    align-items: center;
    position: initial;
  }

  .swiper-button-next:after, .swiper-button-prev:after {
    font-size: 15px;
    font-weight: 900;
  }

  .swiper-wrapper {
    padding-bottom: 50px;

  }
  .swiper-container-horizontal>.swiper-pagination-bullets, .swiper-pagination-custom, .swiper-pagination-fraction{
    bottom: 0px !important;
}
  
  /* .swiper-pagination {
    top: 45px;
  } */

  /* .swiper-button-prev {
    left: 0;
  }

  .swiper-button-next {
    right: 0;
  } */

  .swiper-pagination-bullet-active {
    background-color: #008780;
  }

  .swiper-button-disabled {
    background-color: transparent;
    border: 2px solid #008780;
    color: black;
  }

  @media screen and (max-width: 786px) {

    
    .container__collection-heading {
      font-size: 24px;
    }

    .container__collection-card {
      width: 180px;
      height: 280px;
    }

    .brand-image {
      height: 180px;
    }

    .container__product-title h2 {
      font-size: 16px;
    }

    .collection-btn {
      font-size: 8px;
      padding: 1rem;
    }

    .btn-group {
      bottom: 2rem;
      top: auto;
    }
      
    .swiper-btn {
      width: 35px;
      height: 35px;
      
    }

    .swiper-button-next:after, .swiper-button-prev:after {
    font-size: 14px;
    font-weight: 900;
  }

  .swiper-pagination {
    text-align: start;
  }

  }


</style>

<script>

document.addEventListener('DOMContentLoaded', function() {
  const id = "{{ section.id }}";
  
  const swiperDesktopClass = `.mySwiper-${id}.swiper-desktop`;
  const swiperMobileClass = `.mySwiper-${id}.swiper-mobile`;
  const swiperPaginationClass = `.swiper-pagination-${id}`;
  const swiperButtonNextClass = `.button--${id}.swiper-button-next`;
  const swiperButtonPrevClass = `.button--${id}.swiper-button-prev`;

  const swiperContainer = document.querySelector(swiperDesktopClass);
  const swiperPagination = document.querySelector(swiperPaginationClass);
  const swiperButtonNext = document.querySelector(swiperButtonNextClass);
  const swiperButtonPrev = document.querySelector(swiperButtonPrevClass);

  if (swiperContainer && swiperPagination && swiperButtonNext && swiperButtonPrev) {
    let swiper = new Swiper(swiperDesktopClass, {
      slidesPerView: 2,
      spaceBetween: 10,
      navigation: {
        nextEl: swiperButtonNextClass,
        prevEl: swiperButtonPrevClass,
      },
      pagination: {
        el: swiperPaginationClass,
        clickable: true,
      },
      breakpoints: {
        786: {
          slidesPerView: 3,
          spaceBetween: 10,
        }
      },
      observer: true, 
      observeParents: true,
    });

    swiper.init();
    swiper.update();
  } else {
    console.error('Swiper initialization elements not found for section:', id);
  }

  new Swiper(swiperMobileClass, {
    slidesPerView: 1,
    spaceBetween: 10,
    navigation: {
      nextEl: swiperButtonNextClass,
      prevEl: swiperButtonPrevClass,
    },
    pagination: {
      el: swiperPaginationClass,
      clickable: true,
    },
    observer: true,
    observeParents: true,
  });

});


</script>



